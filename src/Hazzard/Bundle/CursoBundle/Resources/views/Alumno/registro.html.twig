{% extends '::base.html.twig' %}

{% block title %}Registrar{% endblock %}

{% block body %}
    <h1>{{ block('title') }}</h1>
    
    {% for flashMessage in app.session.flashbag.get('notice') %}
    <div class="flash-notice">
        {{ flashMessage }}
    </div>
    {% endfor %}
    <form class="form-horizontal" role="form" action="{{ path('alumno_registro') }}" method="post" {{
    form_enctype(formulario) }}>
    {{ form_start(formulario) }}
    {{ form_errors(formulario) }}
    
    <div class="form-group">
        {{ form_label(formulario.nombre, 'Nombre:', {'label_attr': {'class': 'col-lg-offset-2 col-lg-2 control-label'}}) }}
        <div class="col-lg-4">
            {{ form_widget(formulario.nombre, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(formulario.apellido, 'Apellido:', {'label_attr': {'class': 'col-lg-offset-2 col-lg-2 control-label'}}) }}
        <div class="col-lg-4">
            {{ form_widget(formulario.apellido, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(formulario.dni, 'Documento:', {'label_attr': {'class': 'col-lg-offset-2 col-lg-2 control-label'}}) }}
        <div class="col-lg-4">
            {{ form_widget(formulario.dni, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    
    <div class="form-group">
        {{ form_label(formulario.password.first, 'Contraseña:', {'label_attr': {'class': 'col-lg-offset-2 col-lg-2 control-label'}}) }}
        <div class="col-lg-4">
            {{ form_widget(formulario.password.first, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(formulario.password.second, 'Contraseña (repetir):', {'label_attr': {'class': 'col-lg-offset-2 col-lg-2 control-label'}}) }}
        <div class="col-lg-4">
            {{ form_widget(formulario.password.second, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-5 col-lg-offset-3">
            <button type="submit" class="btn btn-lg btn-primary btn-block">Registrar!</button>
        </div>
    </div>
    {{ form_end(formulario) }}
    </form>
{% endblock %}